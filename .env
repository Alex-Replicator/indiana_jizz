# Indiana Jizz - Настройки окружения
# Скопируйте этот файл в .env и отредактируйте значения

# Основные настройки
COMPOSE_PROJECT_NAME=indiana_jizz
SOURCE_CODE_PATH=../wsw_site

# Порты
WEB_PORT=8123
PMA_PORT=8124

# MySQL
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=wsw_db
MYSQL_USER=wsw_user
MYSQL_PASSWORD=wsw_password

# PHP
PHP_VERSION=8.1
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=60
PHP_UPLOAD_MAX_FILESIZE=20M
PHP_POST_MAX_SIZE=20M

# Nginx
NGINX_CLIENT_MAX_BODY_SIZE=20M

# Ресурсы контейнеров
MYSQL_MEMORY_LIMIT=512M
MYSQL_CPU_LIMIT=0.5
PHP_MEMORY_LIMIT_CONTAINER=512M
PHP_CPU_LIMIT=0.5
NGINX_MEMORY_LIMIT=256M
NGINX_CPU_LIMIT=0.25
PMA_MEMORY_LIMIT=256M
PMA_CPU_LIMIT=0.25

# Временная зона
TZ=Europe/Moscow 